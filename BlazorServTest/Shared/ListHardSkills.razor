<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>Skill</th>
                <th>Year</th>
                <th>My Level</th>
            </tr>
        </thead>
        <tbody>
            @if (MySkills == null)
            {
                <tr>LOADING DATA...</tr>
            }
            else if(MySkills.Count == 0)
            {
                <tr>ERROR: No items in</tr>
            }else
            {
                @foreach (var item in MySkills)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Since.ToString("dd.MM.yyyy")</td>
                        <td>@item.CurrentLevel</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@code {
    private List<HardSkills> MySkills { get; set; }

    protected async override Task OnInitializedAsync()
    {
        //проверка проверок :)
        await Task.Delay(5000);

        //скоро будут грузиться с PostgreSQL
        MySkills = new List<HardSkills>()
        {
            new HardSkills()
            {
                Name = "C#",
                Since = new DateTime(2019,09,01),
                CurrentLevel = "Junior"
            },
            new HardSkills()
            {
                Name = "SQL",
                Since = new DateTime(2020,09,01),
                CurrentLevel = "Junior"
            },
        };
    }
}
